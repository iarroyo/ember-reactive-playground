{{page-title 'ClickOutside'}}

<div class='flex space'>
  <div
    id='categoryA'
    class='p-2'
    {{click-outside (fn this.onCloseCategoryA '')}}
  >
    <button
      class='bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded'
      type='button'
      {{on 'click' this.onToggleCategoryA}}
    >
      <span>Category A</span>
    </button>
    {{#if this.openCategoryA}}
      <div>
        <ul class='bg-blue-300 w-40 rounded mt-1 p-2'>
          <li class='p-1 hover:bg-white rounded'>Option A</li>
          <li class='p-1 hover:bg-white rounded'>Option B</li>
          <li class='p-1 hover:bg-white rounded'>Option C</li>
        </ul>
        <div id='categoryB' class='p-2'>
          <button
            class='bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded'
            type='button'
            {{on 'click' this.onToggleCategoryB}}
            {{click-outside this.onCloseCategoryB}}
          >
            <span>Category B</span>
          </button>
          {{#if this.openCategoryB}}
            <ul class='bg-blue-300 w-40 rounded mt-1 p-2'>
              <li class='p-1 hover:bg-white rounded'>Option A</li>
              <li class='p-1 hover:bg-white rounded'>Option B</li>
              <li class='p-1 hover:bg-white rounded'>Option C</li>
            </ul>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>
</div>